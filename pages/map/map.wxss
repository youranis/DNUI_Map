/* pages/map/map.wxss */
page {
  height: 100%;
  width: 100%;
  background-color: #f2f1ed;
}

.card {
  height: 90px;
  width: 100%;
  display: flex;
  justify-content: center;
  /* align-items: flex-end; */
  align-items: center;
}

.card-top {
  height: 80px;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
}

.card-top-left {
  display: flex;
  flex-direction: column;
  border-radius: 10px 0 0 10px;
}

.card-top-left-view {
  height: 50%;
  margin-left: 10px;
  display: flex;
  align-items: center;
}

.up {
  border-bottom: 1px solid #d8d8d8;
}

.card-top-circle {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  margin-right: 10px;
}

.start {
  background-color: #8e1d21;
}

.end {
  background-color: #404481;
}

.card-top-input {
  letter-spacing: 1px;
  /* width: 100%; */
}

.card-top-middle {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 10px 10px 0;
  /* margin-left: 10px; */
}

.card-top-middle-button {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-top-right {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 10px 10px 0;
  /* margin-left: 10px; */
  margin-right: 10px;
}

.card-top-right-button {
  background-color: #73a5d6;
  color: white;
  width: 70px;
  height: 40px;
  border-radius: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.relative {
  position: relative;
}

.card-bottom-category {
  height: 100%;
  background-color: #f0f0f099;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;

}

.card-bottom-category-label {
  width: 71px;
  height: 35px;
  margin-left: 2px;
  margin-right: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 5px solid #f0f0f099; */
  border-bottom: 5px solid transparent;
  font-weight: bold;
}

.choose {
  border-bottom: 5px solid #404481;
  /* background-color: white; */
  background-color: #ffffff99;
}

.map_right_card {
  height: 190px;
  position: absolute;
  right: 0px;
}

.location {
  width: 60px;
  /* width: 100%; */
  height: 65px;
  /* display: flex; */
  /* justify-content: center; */
  /* justify-content: flex-end; */
  /* align-items: center; */
  /* margin-bottom: 10px; */
}

.instruction {
  height: 55px;
  width: 55px;
  background-color: #73a5d6;
  border-radius: 50%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  margin-right: 5px;
}

.img {
  width: 55px;
  height: 55px;
  margin-right: 5px;
  margin-bottom: 10px;
}

.duration_and_distance {
  display: flex;
  justify-content: space-between;
}

.duration_and_distance_style {
  display: flex;
  align-items: flex-end;
  font-size: larger;
  font-weight: bold;
}

.duration_and_distance_text {
  background-color: white;
  padding: 8px;
}

.card-bottom {
  /* height: 230px; */
  position: relative;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-bottom-button {
  /* height: 35px; */
  /* margin-top: 5px; */
  /* padding: 5px 30px 5px 30px; */
  padding: 5px;
  width: 94%;
  font-size: larger;
  /* color: white; */
  /* background-color: #1AAD19; */
  /* background-color: #f0f0f0; */
  color: #0152d6;
  background-color: #f3f3ff;
  border: 1px solid #0152d6;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.road {
  display: flex;
}

.r_duration_and_distance {
  margin-bottom: 15px;
}

.road_start {
  margin-bottom: 10px;
}

.road_end {
  margin-top: 10px;
}